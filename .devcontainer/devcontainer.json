{
  "name": "Secure PWA Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb"
  },
  "postCreateCommand": "pip install -r requirements.txt && npm install -g lighthouse @angular/cli http-server && git config --global --add safe.directory ${containerWorkspaceFolder}",
  "postAttachCommand": "python main.py",
  "portsAttributes": {
    "5000": {
      "label": "Flask Application",
      "onAutoForward": "openPreview",
      "protocol": "http"
    },
    "3000": {
      "label": "Development Server",
      "onAutoForward": "silent"
    },
    "8080": {
      "label": "HTTP Server",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.autoSave": "onFocusChange",
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.fontSize": 18,
        "extensions.ignoreRecommendations": true,
        "unwantedRecommendations": ["ms-python.vscode-python-envs"],
        "terminal.integrated.defaultProfile.windows": "Git Bash",
        "window.restoreWindows": "preserve",
        "workbench.editorAssociations": {
          "*.md": "vscode.markdown.preview.editor"
        },
        "workbench.colorTheme": "Default Dark+",
        "workbench.iconTheme": "vscode-icons",
        "github.copilot.enable": {
          "python": false,
          "html": false,
          "css": false,
          "SQL": false
        },
        "chat.agent.enabled": false,
        "workbench.editor.enablePreview": true,
        "workbench.editor.enablePreviewFromQuickOpen": true
      },
      "extensions": [
        "bierner.markdown-mermaid",
        "bierner.markdown-preview-github-styles",
        "ecmel.vscode-html-css",
        "esbenp.prettier-vscode",
        "GitHub.codespaces",
        "mathematic.vscode-pdf",
        "McCarter.start-git-bash",
        "mechatroner.rainbow-csv",
        "ms-python.black-formatter",
        "ms-python.debugpy",
        "ms-python.pylint",
        "ms-python.python",
        "oderwat.indent-rainbow",
        "yahyabatulu.vscode-markdown-alert",
        "oderwat.indent-rainbow",
        "streetsidesoftware.code-spell-checker",
        "tal7aouy.icons",
        "yahyabatulu.vscode-markdown-alert",
        "yy0931.vscode-sqlite3-editor"
      ]
    },
    "codespaces": {
      "openFiles": ["README.md"]
    }
  },
  "forwardPorts": [5000, 3000, 8080],
  "remoteUser": "vscode",
  "shutdownAction": "stopContainer"
}
