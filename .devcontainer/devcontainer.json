{
  "name": "Secure PWA Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb"
  },
  "waitFor": "onCreateCommand",
  "onCreateCommand": {
    "pip-install": "pip install -r requirements.txt",
    "npm-install": "npm install -g lighthouse @angular/cli http-server",
    "setup-git": "git config --global --add safe.directory ${containerWorkspaceFolder}"
  },
  "postCreateCommand": "echo 'Development environment ready!'",
  "postAttachCommand": {
    "server-info": "echo 'Flask server: http://localhost:5000'"
  },
  "portsAttributes": {
    "5000": {
      "label": "Flask Application",
      "onAutoForward": "openPreview",
      "protocol": "http"
    },
    "3000": {
      "label": "Development Server",
      "onAutoForward": "silent"
    },
    "8080": {
      "label": "HTTP Server",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.autoSave": "onFocusChange",
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true,
          "source.fixAll": true
        },
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.codeActionsOnSave": {
            "source.organizeImports": true
          }
        },
        "[html]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[css]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.linting.banditEnabled": true,
        "python.testing.pytestEnabled": true,
        "editor.fontSize": 14,
        "editor.lineNumbers": "on",
        "editor.rulers": [88, 120],
        "terminal.integrated.defaultProfile.linux": "bash",
        "workbench.colorTheme": "Default Dark+",
        "workbench.iconTheme": "vscode-icons",
        "security.workspace.trust.enabled": false,
        "html.validate.scripts": true,
        "html.validate.styles": true,
        "css.validate": true,
        "javascript.validate.enable": true,
        "emmet.includeLanguages": {
          "javascript": "javascriptreact"
        },
        "github.copilot.enable": {
          "python": false,
          "html": false,
          "css": false,
          "javascript": false,
          "sql": false
        },
        "chat.agent.enabled": false
      },
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.pylint",
        "ms-python.debugpy",
        "ms-python.vscode-pylance",
        "ms-python.isort",
        "esbenp.prettier-vscode",
        "ecmel.vscode-html-css",
        "bradlc.vscode-tailwindcss",
        "ritwickdey.LiveServer",
        "yy0931.vscode-sqlite3-editor",
        "mechatroner.rainbow-csv",
        "oderwat.indent-rainbow",
        "medo64.render-crlf",
        "bierner.markdown-preview-github-styles",
        "yahyabatulu.vscode-markdown-alert",
        "mathematic.vscode-pdf",
        "streetsidesoftware.code-spell-checker",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "foxundermoon.shell-format",
        "timonwong.shellcheck",
        "ms-vscode-remote.remote-containers",
        "GitHub.codespaces",
        "ms-vscode.vscode-typescript-next",
        "christian-kohler.path-intellisense",
        "formulahendry.auto-rename-tag",
        "PKief.material-icon-theme"
      ]
    }
  },
  "forwardPorts": [5000, 3000, 8080],
  "remoteUser": "vscode",
  "shutdownAction": "stopContainer"
}
